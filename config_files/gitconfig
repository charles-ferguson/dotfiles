[alias]
	b = branch
	cb = rev-parse --symbolic-full-name --abbrev-ref HEAD
	cm = commit --verbose
	co = checkout
	cob = checkout -b
	d = diff
	di = diff --cached
	ds = diff --stat
	f = fetch
	fom = fetch origin master:master
	fum = fetch upstream master:master
	m = merge
	lo = log --oneline
	rom = !git fetch origin master:master && git rebase -i master
	pom = pull origin master
	pum = pull upstream master
	s = status
[push]
	default = current
[core]
